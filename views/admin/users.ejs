<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Sonos Dashboard</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/asset/imgs/theme/favicon.svg">
    <!-- Template CSS -->
    <link href="/asset/css/main.css?v=3.4" rel="stylesheet" type="text/css" />

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" integrity="sha512-v2CJ7UaYy4JwqLDIrZUI/4hqeoQieOmAZNXBeQyjo21dadnwR+8ZaIJVT8EE2iyI61OV8e6M8PP2/4hpQINQ/g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>

<body>
    <%- include('../layouts/header2.ejs') %>
        <section class="content-main">
            <div class="content-header">
                <h2 class="content-title">User list</h2>
             >
            </div>
            <div class="card mb-4">
                <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>User</th>
                                    <th>Email</th>
                                    <th>Status</th>
                                    <th>Registered</th>
                                    <th class="text-end">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (users.length > 0) {
                                    users.forEach(function(user) { %>
                                        <tr>
                                            <td width="40%">
                                                <a href="#" class="itemside">
                                                    <div class="left">
                                                        <img src="/asset/imgs/people/avatar1.jpg" class="img-sm img-avatar" alt="Userpic">
                                                    </div>
                                                    <div class="info pl-3">
                                                        <h6 class="mb-0 title"><%= user.username %></h6>
                                                        <small class="text-muted"></small>
                                                        <td><%= user.email %></td>
                                                        <td><span class="badge rounded-pill alert-success">Active</span></td>

                                                        <td class="text-end">
                                                            <a href="#" class="btn btn-sm btn-brand rounded font-sm mt-15">View details</a>
                                                        </td>
                                                      
                                                            <!-- ...other user data columns... -->
                                                            <td class="text-end">
                                                                <%if(user.is_active == false){%>
                                                                <button class="btn-danger btn-sm btn-block-user rounded font-sm mt-15" data-user-id="<%= user.id %>" data-user-status="active" onclick="unblockuser('<%= user.id %>')">Un block</button>

                                                                <%}else{%>
                                                                <button class="btn-danger btn-sm btn-block-user rounded font-sm mt-15" data-user-id="<%= user.id %>" data-user-status="active" onclick="blockuser('<%= user.id %>')">Block</button>
                                                                    <%}%>
                                                            </td>
                                                      
                                                    </div>
                                                </a>
                                            </td>
                                            <td></td>
                                        </tr>
                                    <% });
                                } else { %>
                                    <tr>
                                        <td colspan="5">Users not Found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
                
        </footer>


        <script>

function blockuser(uid) {
   alert(uid) 
    alert("hi da");
    $.ajax({
        url: "/admin/blockuser",
        method: "post",
        data: {
            id: uid
        },
        success: function () {
            location.reload();
        },
        error: function (data) {
            alert("error");
        }
    });
}

function unblockuser(uid) {
   alert(uid) 
    alert("hi da");
    $.ajax({
        url: "/admin/unblockuser",
        method: "post",
        data: {
            id: uid
        },
        success: function () {
            location.reload();
        },
        error: function (data) {
            alert("error");
        }
    });
}

                            

                
            
        </script>
    </main>
    <script src="/asset/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/asset/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/asset/js/vendors/select2.min.js"></script>
    <script src="/asset/js/vendors/perfect-scrollbar.js"></script>
    <script src="/asset/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/asset/js/main.js" type="text/javascript"></script>
</body>

</html>