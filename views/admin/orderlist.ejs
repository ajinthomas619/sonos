<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>Evara Dashboard</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="/asset/imgs/theme/favicon.svg">
    <!-- Template CSS -->
    <link href="/asset/css/main.css" rel="stylesheet" type="text/css" />
</head>

<%- include('../layouts/header2.ejs') %>
        <section class="content-main">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order List </h2>
                    <p>Lorem ipsum dolor sit amet.</p>
                </div>
                <
            </div>
            <div class="card mb-4">
                <header class="card-header">
                    <div class="row gx-3">
                        
                        
                    </div>
                </header> <!-- card-header end// -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>#ID</th>
                                    <th scope="col">payment Status</th>
                                    <th scope="col">payment Method</th>
                                    <th scope="col">Total</th>
                                    <th scope="col"></th>

                                </tr>
                            </thead>
                           
                            <tbody>
                                <% if (orders.length > 0) { %>
                                  <% for (let i = 0; i < orders.length; i++) { %>
                                    <tr>
                                      <td width="40%">
                                        <a href="#" class="itemside">
                                          <div class="left">
                                            <img src="/asset/imgs/people/avatar1.jpg" class="img-sm img-avatar" alt="Userpic">
                                          </div>
                                          <div class="info pl-3">
                                            <h6 class="mb-0 title"><%= orders[i].customerId %></h6>
                                            <small class="text-muted"></small>
                                          </div>
                                        </a>
                                      </td>
                                      <td><%= orders[i].paymentStatus %></td>
                                      <td><span class="badge rounded-pill alert-success"><%= orders[i].paymentMethod %></span></td>
                                      <td><%= orders[i].totalAmount %></td>
                                      <td class="text-end">
                                        <a href="/orderdetails/<%= orders[i]._id %>" class="btn btn-sm btn-brand rounded font-sm mt-15">View details</a>
                                      </td>
                                    </tr>
                                  <% } %>
                                <% } else { %>
                                  <tr>
                                    <td colspan="5">Orders not Found</td>
                                  </tr>
                                <% } %>
                              </tbody>
                              
                        </table>
                        <div class="pagination">
                          <% for (let j = 1; j <= totalPages; j++) { %>
                              <a href="?page=<%= j %>" style="margin-right: 10px;"><%= j %></a>
                          <% } %>
                      </div>
                    </div> <!-- table-responsive //end -->
                </div> <!-- card-body end// -->
            </div> <!-- card end// -->
           
            
        </section> <!-- content-main end// -->
        <footer class="main-footer font-xs">
            <div class="row pb-30 pt-15">
                <div class="col-sm-6">
                    <script>
                    document.write(new Date().getFullYear())
                    </script> Â©, Evara - HTML Ecommerce Template .
                </div>
                <div class="col-sm-6">
                    <div class="text-sm-end">
                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <script src="/asset/js/vendors/jquery-3.6.0.min.js"></script>
    <script src="/asset/js/vendors/bootstrap.bundle.min.js"></script>
    <script src="/asset/js/vendors/select2.min.js"></script>
    <script src="/asset/js/vendors/perfect-scrollbar.js"></script>
    <script src="/asset/js/vendors/jquery.fullscreen.min.js"></script>
    <!-- Main Script -->
    <script src="/asset/js/main.js" type="text/javascript"></script>
</body>

</html>