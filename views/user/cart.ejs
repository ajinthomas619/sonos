<script>

function changeQuantity(proId, count, unit) {
    let proTotal = parseInt(document.getElementById(proId + 'pro-total').innerHTML);
    let price = parseInt(document.getElementById(proId + 'price').innerHTML);
    let quantity = parseInt(document.getElementById(proId).innerHTML);

    if (quantity <= 1 && count === -1) {
        // Display error message or handle the situation where the quantity is already 1 and trying to decrease it further
        Swal.fire({
            title: 'Minimum Quantity Reached!',
            text: 'Quantity cannot be less than 1.',
            icon: 'error',
            timer: 5000
        });
    } else if (quantity + count > unit) {
        // Display out of stock message
        Swal.fire({
            title: 'STOCK!',
            text: 'Product is out of stock.',
            icon: 'error',
            timer: 5000
        });
    } else {
        document.getElementById(proId + 'pro-total').innerHTML = proTotal + count * price;
        let GrandTotal = parseInt(document.getElementById('grand-total').innerHTML);
        document.getElementById('grand-total').innerHTML = GrandTotal + count * price;
        document.getElementById(proId).innerHTML = quantity + count;

        $.ajax({
            url: "/changeQuantity",
            method: 'post',
            data: {
                proId: proId,
                count: count,
                quantity: quantity,
            },
            success: (response) => {
                if (response.status == true) {
                    location.reload();
                } else {
                    let total = quantity + count;
                    document.getElementById(proId).innerHTML = total;
                }
            }
        });
    }
}




